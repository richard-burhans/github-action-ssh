{
  "name": "@richard-burhans/github-action-ssh",
  "version": "0.8.0",
  "description": "Run commands on a remote server via SSH.",
  "repository": {
    "type": "git",
    "url": "https://github.com/richard-burhans/github-action-ssh"
  },
  "main": "lib/index.json",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pack": "ncc build --source-map --license licenses.txt"
  },
  "bin": {
    "github-action-ssh": "dist/index.js"
  },
  "preferGlobal": false,
  "keywords": [
    "typescript",
    "github",
    "github-actions",
    "actions",
    "ssh"
  ],
  "author": "richard-burhans",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "node-ssh": "^13.2.0"
  },
  "devDependencies": {
    "@types/node": "^22.8.7",
    "@types/ssh2": "^1.15.1",
    "@vercel/ncc": "^0.38.2",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3"
  }
}
